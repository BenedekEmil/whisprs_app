.contains-dropper {
  height: 260px;
  width: 200px;
  display: table-cell;
  z-index: 100;
  position: relative;
  padding-top: 11px;
}

.dropper {
  position: relative;
  border: 2px dashed hsl(184, 75%, 42%);
  background-color: hsl(183, 16%, 23%);
  text-align: center;
  vertical-align: middle;
  display: table-cell;
  height: 260px;
  width: 200px;
  &.is-dragging::before {
    content: "";
    position: absolute;
    left: 0; width: 100%;
    top: 0; height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 1.5em;
    background-color: rgba($primary, .3);
    pointer-events: none;
    z-index: 99;

  }
  &.is-in-dropper::before {
    content: "";
    position: absolute;
    left: 0; width: 100%;
    top: 0; height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 1.5em;
    background-color: rgba(black, .3);
    pointer-events: none;
    z-index: 99;
  }
}

.file-i {
  visibility: hidden !important;
